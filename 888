<body>

    <div class="game-container">
        <div class="player-prof">
            <h2 id="user-name">User</h2>
            <div class="score-box" id="user-score">0</div>
            <div class="number-box" id="user-number">?</div>
        </div>

        <div class="controls">
            <button id="generate-button">генерувати</button>
            <button id="restart-button" style="display:none;">Грати знову</button>
            <h3 id="round-winner-text"></h3>
            <h1 id="game-winner-message"></h1> 
        </div>

        <div class="player-prof">
            <h2>Machine</h2>
            <div class="score-box" id="computer-score">0</div>
            <div class="number-box" id="computer-number">?</div>
        </div>
    </div>

    <script>
        window.onload = function() {

            const userNameEl = document.getElementById('user-name');
            const userScoreEl = document.getElementById('user-score');
            const userNumberEl = document.getElementById('user-number');
            
            const computerScoreEl = document.getElementById('computer-score');
            const computerNumberEl = document.getElementById('computer-number');
            
            const generateButton = document.getElementById('generate-button');
            const restartButton = document.getElementById('restart-button');
            const roundWinnerEl = document.getElementById('round-winner-text');
            const gameWinnerEl = document.getElementById('game-winner-message');

            restartButton.style.display = 'none';

            let userScore = 0;
            let computerScore = 0;
            const maxScore = 3;
            let gameInProgress = true;

            let userName = prompt("Введіть ваше ім'я:", "Користувач");

            if (!userName || userName.trim() === "") {
                userName = "Користувач";
            }

            userNameEl.textContent = userName;

            generateButton.addEventListener('click', playGameRound);
            restartButton.addEventListener('click', resetGame);

            function playGameRound() {
                if (!gameInProgress) return;

                const userRandom = Math.floor(Math.random() * 10) + 1;
                const computerRandom = Math.floor(Math.random() * 10) + 1;

                userNumberEl.textContent = userRandom;
                computerNumberEl.textContent = computerRandom;

                if (userRandom > computerRandom) {
                    userScore++;
                    roundWinnerEl.textContent = `${userName} got +1point`;
                } else if (computerRandom > userRandom) {
                    computerScore++;
                    roundWinnerEl.textContent = 'Machine got +1point';
                } else {
                    roundWinnerEl.textContent = '+1 round';
                }

                userScoreEl.textContent = userScore;
                computerScoreEl.textContent = computerScore;

                checkGameWinner();
            }

            function checkGameWinner() {
                if (userScore === maxScore) {
                    gameWinnerEl.textContent = `${userName} WINNER!`;
                    endGame();
                } else if (computerScore === maxScore) {
                    gameWinnerEl.textContent = `Machine WINNER!`;
                    endGame();
                }
            }

            function endGame() {
                gameInProgress = false;
                generateButton.disabled = true;
                roundWinnerEl.textContent = 'Гра завершена!';
                restartButton.style.display = 'inline-block';
            }

            function resetGame() {
                userScore = 0;
                computerScore = 0;
                gameInProgress = true;

                userScoreEl.textContent = userScore;
                computerScoreEl.textContent = computerScore;
                userNumberEl.textContent = '?';
                computerNumberEl.textContent = '?';
                roundWinnerEl.textContent = '';
                gameWinnerEl.textContent = '';

                generateButton.disabled = false;
                restartButton.style.display = 'none';
            }

        };
    </script>
</body>
